{% extends "base.j2" %}
{% block content %}
<nav>
  <ul>
    <li>
      <h1>Note #{{note.id}} / {{space.name}}</h1>
    </li>
  </ul>
  <ul>
    <li><a href="/notes/{{space.id}}">Back to list</a></li>
    <li><a href="/notes/{{space.id}}/{{note.id}}/edit">Edit</a></li>
    <li><a href="/notes/{{space.id}}/create">Create new</a></li>
  </ul>
</nav>

<article>
  <div class="note-metadata">
    <p><strong>ID:</strong> #{{note.id}}</p>
    <p><strong>Author:</strong> {{note.author}}</p>
    <p><strong>Created:</strong> {{note.created_at.strftime('%Y-%m-%d %H:%M')}}</p>
  </div>
  
  <div class="note-fields">
    {% for field in space.fields %}
      {% set field_value = note.fields.get(field.name) %}
      
      {# Only show field if it has a value #}
      {% if field_value is not none and field_value != "" and (field.type != "tags" or field_value|length > 0) %}
        <div class="field-item">
          <strong>{{field.name}}:</strong>
          
          {% if field.type == "markdown" %}
            <div class="markdown-content" id="markdown_{{field.name}}">
              {{field_value}}
            </div>
          
          {% elif field.type == "boolean" %}
            <span>{{field_value|string}}</span>
          
          {% elif field.type == "tags" %}
            <span class="tags">
              {% for tag in field_value %}
                <span class="tag">{{tag}}</span>
                {% if not loop.last %}, {% endif %}
              {% endfor %}
            </span>
          
          {% elif field.type == "datetime" %}
            <span>{{field_value.strftime('%Y-%m-%d %H:%M')}}</span>
          
          {% else %}
            <span>{{field_value}}</span>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</article>

<!-- Comments Section -->
<article id="comments-section">
  <header>
    <h3>Comments ({{comments|length}})</h3>
  </header>

  <!-- Add Comment Form -->
  <div class="add-comment-form">
    <form method="post" action="/notes/{{space.id}}/{{note.id}}/comments">
      <div class="grid">
        <div>
          <label for="content">Add a comment:</label>
          <textarea 
            id="content" 
            name="content" 
            placeholder="Write your comment here... (Markdown supported)"
            rows="4"
            required
          ></textarea>
          <small>You can use <strong>Markdown</strong> formatting in your comments.</small>
        </div>
      </div>
      <button type="submit">Add Comment</button>
    </form>
  </div>

  <!-- Comments List -->
  <div class="comments-list">
    {% if comments %}
      {% for comment in comments|reverse %}
        <div class="comment-item">
          <div class="comment-header">
            <strong>{{comment.author}}</strong>
            <span class="comment-date">{{comment.created_at.strftime('%Y-%m-%d %H:%M')}}</span>
          </div>
          <div class="comment-content markdown-content" id="comment_{{comment.id}}">
            {{comment.content}}
          </div>
        </div>
      {% endfor %}
    {% else %}
      <div class="no-comments">
        <p><em>No comments yet. Be the first to add one!</em></p>
      </div>
    {% endif %}
  </div>
</article>

<style>
  .note-metadata {
    background-color: #f5f5f5;
    padding: 1rem;
    margin-bottom: 1rem;
    border-radius: 4px;
  }
  
  .note-metadata p {
    margin: 0.25rem 0;
  }
  
  .note-fields {
    padding: 1rem 0;
  }
  
  .field-item {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #eee;
  }
  
  .field-item:last-child {
    border-bottom: none;
  }
  
  .markdown-content {
    margin-top: 0.5rem;
    padding: 1rem;
    background-color: #f9f9f9;
    border-left: 3px solid #ddd;
    border-radius: 4px;
  }
  
  .markdown-content h1, .markdown-content h2, .markdown-content h3,
  .markdown-content h4, .markdown-content h5, .markdown-content h6 {
    margin-top: 1rem;
    margin-bottom: 0.5rem;
  }
  
  .markdown-content h1:first-child, .markdown-content h2:first-child,
  .markdown-content h3:first-child, .markdown-content h4:first-child,
  .markdown-content h5:first-child, .markdown-content h6:first-child {
    margin-top: 0;
  }
  
  .markdown-content p {
    margin-bottom: 1rem;
  }
  
  .markdown-content p:last-child {
    margin-bottom: 0;
  }
  
  .markdown-content pre {
    background-color: #f4f4f4;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin: 1rem 0;
  }
  
  .markdown-content code {
    background-color: #f4f4f4;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
  }
  
  .markdown-content pre code {
    background-color: transparent;
    padding: 0;
  }
  
  .markdown-content blockquote {
    border-left: 4px solid #ddd;
    margin: 1rem 0;
    padding-left: 1rem;
    color: #666;
  }
  
  .markdown-content ul, .markdown-content ol {
    margin: 1rem 0;
    padding-left: 2rem;
  }
  
  .markdown-content li {
    margin-bottom: 0.5rem;
  }
  
  .markdown-content table {
    border-collapse: collapse;
    width: 100%;
    margin: 1rem 0;
  }
  
  .markdown-content th, .markdown-content td {
    border: 1px solid #ddd;
    padding: 0.5rem;
    text-align: left;
  }
  
  .markdown-content th {
    background-color: #f5f5f5;
    font-weight: bold;
  }
  
  .markdown-content a {
    color: #007bff;
    text-decoration: none;
  }
  
  .markdown-content a:hover {
    text-decoration: underline;
  }
  
  .tags .tag {
    background-color: #e0e0e0;
    padding: 0.2rem 0.5rem;
    border-radius: 3px;
    font-size: 0.9rem;
  }

  /* Comments Styles */
  #comments-section {
    margin-top: 2rem;
    border-top: 2px solid #eee;
    padding-top: 1rem;
  }

  .add-comment-form {
    margin-bottom: 2rem;
    padding: 1rem;
    background-color: #f9f9f9;
    border-radius: 4px;
    border-left: 3px solid #007bff;
  }

  .add-comment-form textarea {
    resize: vertical;
    min-height: 100px;
  }

  .comments-list {
    margin-top: 1rem;
  }

  .comment-item {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background-color: #fafafa;
    border-radius: 4px;
    border-left: 3px solid #ddd;
  }

  .comment-item:last-child {
    margin-bottom: 0;
  }

  .comment-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #eee;
  }

  .comment-date {
    color: #666;
    font-size: 0.9rem;
    font-weight: normal;
  }

  .comment-content {
    margin-top: 0.5rem;
  }

  .comment-content.markdown-content {
    background-color: transparent;
    border: none;
    padding: 0;
  }

  .no-comments {
    text-align: center;
    padding: 2rem;
    color: #666;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Render all markdown content on page load (including comments)
    const markdownElements = document.querySelectorAll('.markdown-content');
    markdownElements.forEach(function(element) {
      const markdownText = element.textContent.trim();
      if (markdownText && markdownText !== 'N/A') {
        element.innerHTML = marked.parse(markdownText);
      }
    });
  });
</script>
{% endblock %}