{% extends "base.j2" %}

{% block title %}Create Telegram Bot - Admin{% endblock %}

{% block content %}
<h1>Create Telegram Bot</h1>

<form method="post" action="/admin/telegram/create">
    <fieldset>
        <legend>Bot Information</legend>
        
        <label for="bot_id">Bot ID:</label>
        <input type="text" name="bot_id" id="bot_id" required placeholder="e.g., spacenote-bot">
        <small>A unique identifier for the bot (used internally)</small>
        
        <label for="token">Bot Token:</label>
        <input type="text" name="token" id="token" required placeholder="1234567890:ABCdefGHIjklMNOpqrsTUVwxyz">
        <small>The bot token from @BotFather on Telegram</small>
        
        <button type="submit">Create Bot</button>
    </fieldset>
</form>

<p><a href="/admin/telegram">Back to Telegram Bots</a></p>
{% endblock %}